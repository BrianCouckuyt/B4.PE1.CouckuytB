<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:B4.PE1.CouckuytB"
             x:Class="B4.PE1.CouckuytB.MainPage">

    <StackLayout>
        <!-- Place new controls here -->
        <Label Text="Welcome! Please choose which page to go to." 
           HorizontalOptions="Center"
           VerticalOptions="CenterAndExpand" />

        <Button 
                x:Name="btnPictureGallery" 
                Text="Go to the picture gallery" 
                Clicked="btnPictureGallery_Clicked"/>

        <Button 
                x:Name="btnWikiPage" 
                Text="Go to the wiki page" 
                Clicked="btnWikiPage_Clicked"/>
    </StackLayout>

</ContentPage>
