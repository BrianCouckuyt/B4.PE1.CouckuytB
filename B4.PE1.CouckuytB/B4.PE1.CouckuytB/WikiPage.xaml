<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="B4.PE1.CouckuytB.WikiPage">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Welcome to the wiki page!"
                VerticalOptions="Center" 
                HorizontalOptions="CenterAndExpand" />

            <Grid BackgroundColor="LightGray" HeightRequest="600">
                <Label HorizontalTextAlignment="Start" Font="Comic Sans MS">
                    123 text 123
                    bold text italic text
                </Label>
                <Image Aspect="AspectFill" AbsoluteLayout.LayoutBounds="0,0,1,1" AbsoluteLayout.LayoutFlags="All">
                    <Image.Source>
                        <OnPlatform x:TypeArguments="ImageSource" Android="Resources/drawable/sea.jpg"/>
                    </Image.Source>
                </Image>
            </Grid>
            
            <Button x:Name="btnGoBack" Text="Go Back" Clicked="btnGoBack_Clicked"></Button>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>